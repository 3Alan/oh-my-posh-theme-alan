{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#ffffff",
          "properties": {
            "postfix": ""
          }
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "#FBBF24"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#60A5FA",
          "properties": {
            "folder_icon": "\uF115",
            "folder_separator_icon": "/",
            "style": "full",
            "postfix": " "
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#1D4ED8",
          "properties": {
            "prefix": "[",
            "postfix": "]"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#60A5FA",
          "properties": {
            "prefix": "",
            "text": ">"
          }
        }
      ]
    }
  ]
}
